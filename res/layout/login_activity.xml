<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_bg_grey"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar__" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_margin_d"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="@dimen/ui_margin_d">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ui_margin_b"
                    android:text="账户"
                    android:textColor="@color/ui_font_a"
                    android:textSize="@dimen/ui_font_c" />

                <EditText
                    android:id="@+id/input_phone"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="请输入手机号码"
                    android:background="#0000"
                    android:inputType="phone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ui_divider_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ui_margin_b"
                    android:text="登录密码"
                    android:textColor="@color/ui_font_a"
                    android:textSize="@dimen/ui_font_c" />

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#0000"
                    android:hint="请输入登录密码"
                    android:inputType="phone" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/ui_margin_d">

            <TextView
                android:id="@+id/click_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/ui_margin_b"
                android:text="找回密码"
                android:textColor="@color/ui_font_e"
                android:textSize="@dimen/ui_font_c" />

        </LinearLayout>

        <TextView
            android:id="@+id/click_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_size_item_height_normal"
            android:layout_marginLeft="@dimen/ui_margin_d"
            android:layout_marginRight="@dimen/ui_margin_d"
            android:background="#f69e05"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/ui_font_g"
            android:textSize="@dimen/ui_font_c" />
    </LinearLayout>
</LinearLayout>