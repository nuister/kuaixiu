<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ui_bg_grey"
              android:orientation="vertical">

    <include layout="@layout/include_title_bar__"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:id="@+id/click_choose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/ui_margin_d"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/label_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="20dp"
                        android:textColor="@color/ui_font_c"
                        android:textSize="@dimen/ui_font_b"/>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="12dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/arrow_down"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/ui_bg_white"
                    android:paddingLeft="@dimen/ui_margin_d"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/label_address"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="#0000"
                        android:text="成都"
                        android:layout_marginRight="@dimen/ui_margin_d"
                        android:textColor="@color/ui_font_c"
                        android:textSize="@dimen/ui_font_b"/>


                    <LinearLayout
                        android:id="@+id/click_map"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/map"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ui_margin_f"
                    android:minHeight="50dp"
                    android:orientation="vertical"
                    ></LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ui_margin_d"
                    android:orientation="vertical"
                    android:background="@color/ui_bg_white"
                    >

                    <EditText
                        android:id="@+id/input_description"
                        android:background="#0000"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="top|left"
                        android:hint="说点什么吧"
                        android:singleLine="false"
                        android:inputType="text"
                        android:textSize="@dimen/ui_font_c"
                        />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/ui_margin_d"
            android:background="@color/ui_bg_white"
            >

            <TextView
                android:id="@+id/click_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_size_item_height_normal"
                android:background="#39B44A"
                android:gravity="center"
                android:text="发布需求"
                android:textColor="@color/ui_font_g"
                android:textSize="@dimen/ui_font_c"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>