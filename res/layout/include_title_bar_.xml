<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleBar"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@android:color/white"
    android:visibility="visible" >

    <RelativeLayout
        android:id="@+id/title_back_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:clickable="true" >

        <ImageView
            android:id="@+id/title_back_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ui_left_arrow" />

        <TextView
            android:id="@+id/title_back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/title_back_img"
            android:textSize="@dimen/ui_font_c" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingRight="8dp" >

        <TextView
            android:id="@+id/title_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#919191" />
    </RelativeLayout>
</RelativeLayout>

