<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ui_bg_grey">

    <include layout="@layout/include_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/ui_margin_c"
        android:layout_marginBottom="@dimen/ui_margin_c"
        android:background="@color/ui_bg_white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_margin_d"
            android:layout_marginTop="@dimen/ui_margin_d"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/ui_margin_d"
                android:text="评分"
                android:textColor="@color/ui_font_c"
                android:textSize="@dimen/ui_font_c"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/rating_a"
                    android:layout_width="@dimen/ui_size_icon_c"
                    android:layout_height="@dimen/ui_size_icon_c"
                    android:layout_marginRight="@dimen/ui_margin_d"
                    android:src="@drawable/rating_star"
                    />

                <ImageView
                    android:id="@+id/rating_b"
                    android:layout_width="@dimen/ui_size_icon_c"
                    android:layout_height="@dimen/ui_size_icon_c"
                    android:layout_marginRight="@dimen/ui_margin_d"
                    android:src="@drawable/rating_star"
                    />

                <ImageView
                    android:id="@+id/rating_c"
                    android:layout_width="@dimen/ui_size_icon_c"
                    android:layout_height="@dimen/ui_size_icon_c"
                    android:layout_marginRight="@dimen/ui_margin_d"
                    android:src="@drawable/rating_star"
                    />

                <ImageView
                    android:id="@+id/rating_d"
                    android:layout_width="@dimen/ui_size_icon_c"
                    android:layout_height="@dimen/ui_size_icon_c"
                    android:layout_marginRight="@dimen/ui_margin_d"
                    android:src="@drawable/rating_star"
                    />

                <ImageView
                    android:id="@+id/rating_e"
                    android:layout_width="@dimen/ui_size_icon_c"
                    android:layout_height="@dimen/ui_size_icon_c"
                    android:src="@drawable/rating_star"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ui_margin_d"
        android:orientation="vertical"
        android:background="@color/ui_bg_white"
        >

        <EditText
            android:id="@+id/input_description"
            android:background="#0000"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top|left"
            android:hint="说点什么吧"
            android:singleLine="false"
            android:inputType="text"
            android:textSize="@dimen/ui_font_c"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ui_margin_f"
        android:orientation="vertical"
        >


    </LinearLayout>
</LinearLayout>